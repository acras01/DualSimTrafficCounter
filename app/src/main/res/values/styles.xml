<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>
    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>
    <style name="AppTheme.ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.ActionBar.TitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/widget_text</item>
    </style>
    <style name="AppTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:textAppearanceLarge">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowTitleStyle">@style/AppTheme.Dialog.Title</item>
    </style>
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.DayNight.Dialog" >
        <item name="android:windowTitleStyle">@style/AppTheme.Dialog.Title</item>
    </style>
    <style name="AppTheme.Dialog.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>
</resources>