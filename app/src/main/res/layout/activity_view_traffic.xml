<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ua.od.acros.dualsimtrafficcounter.dialogs.ViewTraffic">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout2" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day"
                android:id="@+id/day"
                android:layout_column="2"
                android:gravity="center_vertical|center"
                android:layout_below="@+id/rx"
                android:layout_toLeftOf="@+id/sim"
                android:width="100dp"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night"
                android:id="@+id/night"
                android:layout_column="3"
                android:gravity="center_vertical|center"
                android:layout_below="@+id/rx"
                android:layout_toLeftOf="@+id/sim"
                android:width="100dp"
                android:textColor="@android:color/primary_text_dark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/primary_text_dark"
                android:text="@string/transmitted"
                android:id="@+id/txText"
                android:width="80dp"
                android:layout_column="1"
                android:gravity="left|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="0"
                android:id="@+id/tx"
                android:gravity="center_vertical|center"
                android:layout_column="2"
                android:width="100dp"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="0"
                android:id="@+id/txnight"
                android:gravity="center_vertical|center"
                android:layout_column="3"
                android:width="100dp"
                android:textColor="@android:color/primary_text_dark" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow2"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/primary_text_dark"
                android:text="@string/received"
                android:id="@+id/rxText"
                android:layout_column="1"
                android:width="80dp"
                android:gravity="left|center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="0"
                android:id="@+id/rx"
                android:layout_column="2"
                android:gravity="center_vertical|center"
                android:width="100dp"
                android:textColor="@android:color/primary_text_dark"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="0"
                android:id="@+id/rxnight"
                android:width="100dp"
                android:layout_column="3"
                android:gravity="center_vertical|center"
                android:textColor="@android:color/primary_text_dark"
                android:layout_below="@+id/rx"
                android:layout_alignRight="@+id/sim" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tableRow3"
            android:layout_marginTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:id="@+id/totText"
                android:layout_column="1"
                android:gravity="left|center_vertical"
                android:width="80dp"
                android:textSize="14sp"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/total"
                android:layout_column="2"
                android:gravity="center_vertical|center"
                android:width="100dp"
                android:textColor="@android:color/primary_text_dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/totalnight"
                android:layout_column="3"
                android:gravity="center_vertical|center"
                android:width="100dp"
                android:textColor="@android:color/primary_text_dark" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout2"
        android:weightSum="1">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_date"
            android:id="@+id/choosedate"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/tableLayout2"
            android:layout_weight=".5"
            android:visibility="gone" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/ok"
            android:id="@+id/buttonOK"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/tableLayout2"
            android:layout_weight=".5" />
    </LinearLayout>

</RelativeLayout>
